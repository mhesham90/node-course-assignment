<% include ../layout/header %>
<div class="container col-md-4 col-md-offset-4">
<h1 style="text-align: center"><%= myTitle %></h1>
<form class="form-group" action="/products/new" method="post" enctype="multipart/form-data">
    <label>Product name</label>
    <input class="form-control" type="text" name="name" value="" placeholder="Product name" required>
    <label>Product description</label>
    <input class="form-control" type="text" name="description" value="" placeholder="Product description" required>
    <label>Product price</label>
    <input class="form-control" type="text" name="price" value="" placeholder="Product price" required>
    <label>Product image</label>
    <input class="form-control" type="file"  name="avatar" value="" required>**only jpg, jpeg and png allowed<br>
    <input class="btn btn-default pull-right" type="submit"  value="Submit">
</form>
</div>
<%include ../layout/footer %>
