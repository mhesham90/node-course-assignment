<% include ../layout/header %>
<div class="container col-md-4 col-md-offset-4">
    <h1 style="text-align: center"><%= myTitle %></h1>

    <form class="form-group" action="/auth/register" method="post" enctype="multipart/form-data">
        <input class="form-control" type="text" name="username" value="" placeholder="username" required><br>
        <input class="form-control" type="password" name="password" value="" placeholder="Password" required><br>
        <input class="form-control" type="file"  name="avatar" value="" required>**only jpg, jpeg and png allowed<br>
        <input class="btn btn-default pull-right" type="submit"  value="Register">
    </form>
    <br><br>
    <%if(message.length>0){%>
    <div class="alert alert-danger"> <%=message%> </div>
    <%}%>
</div>
<%include ../layout/footer %>
