<% include ../layout/header %>
<div class="container col-md-4 col-md-offset-4">
    <h1 style="text-align: center"><%= myTitle %></h1>

    <form class="form-group" action="/auth/login" method="post">
        <input class="form-control" type="text" name="username" value="" placeholder="username" required><br>
        <input class="form-control" type="password" name="password" value="" placeholder="Password" required><br>
        <input class="btn btn-default pull-right" type="submit"  value="Login">
    </form>
    <br><br>
    <%if(message.length>0){%>
    <div class="alert alert-danger"> <%=message%> </div>
    <%}%>
    <%if(successMessage.length>0){%>
    <div class="alert alert-success"> <%=successMessage%> </div>
    <%}%>

</div>
<%include ../layout/footer %>
